{
  "version": 2,
  "builds": [
    {
      "src": "api/api_main.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "/static/admin.html"
    },
    {
      "src": "/(.*)",
      "dest": "api/api_main.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "DATABASE_URL": "sqlite:///tmp/ocr_volantino.db",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "api/api_main.py": {
      "maxDuration": 30
    }
  }
}